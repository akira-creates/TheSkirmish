<div class="px-4 sm:px-0">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium text-gray-900">Edit Bracket Match</h3>
        <p class="mt-1 text-sm text-gray-600">
          Manually assign or reassign fighters to this bracket match.
        </p>
        <div class="mt-4 p-4 bg-blue-50 rounded-md">
          <p class="text-sm text-blue-700">
            <strong>Bracket:</strong> <%= @bracket.display_name %>
          </p>
          <% if @bracket.completed %>
            <p class="text-sm text-yellow-700 mt-2">
              <strong>Warning:</strong> This match has been completed.
            </p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= form_with model: @bracket, class: "bg-white shadow rounded-lg" do |f| %>
        <div class="px-4 py-5 sm:p-6">
          <div class="grid grid-cols-6 gap-6">
            <div class="col-span-6">
              <label for="fighter1_id" class="block text-sm font-medium text-gray-700">Fighter 1</label>
              <%= f.select :fighter1_id,
                  options_from_collection_for_select(@all_fighters, :id, :name_with_club, @bracket.fighter1_id),
                  { include_blank: 'Select fighter...' },
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm" %>
            </div>

            <div class="col-span-6">
              <label for="fighter2_id" class="block text-sm font-medium text-gray-700">Fighter 2</label>
              <%= f.select :fighter2_id,
                  options_from_collection_for_select(@all_fighters, :id, :name_with_club, @bracket.fighter2_id),
                  { include_blank: 'Select fighter...' },
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm" %>
            </div>
          </div>
        </div>
        <div class="px-4 py-3 bg-gray-50 text-right sm:px-6 rounded-b-lg">
          <%= link_to "Cancel", brackets_path, class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 mr-3" %>
          <%= f.submit "Update Bracket", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>