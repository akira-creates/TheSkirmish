<div class="px-4 sm:px-0">
  <div class="sm:flex sm:items-center mb-8">
    <div class="sm:flex-auto">
      <h2 class="text-3xl font-bold text-gray-900">Double Elimination Brackets</h2>
      <p class="mt-2 text-sm text-gray-700">Tournament bracket progression from first round to finals. Matches are created automatically as fighters advance.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <% if @upper_brackets.empty? %>
        <%= link_to "Generate Brackets", new_bracket_path, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-red-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-red-700" %>
      <% elsif Bracket.where(completed: false).any? { |b| b.ready_to_fight? && b.match.nil? } %>
        <%= button_to "Generate Matches", generate_matches_brackets_path, method: :post, class: "inline-flex items-center justify-center rounded-md border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 bg-white shadow-sm hover:bg-gray-50" %>
      <% end %>
    </div>
  </div>

  <% if @upper_brackets.any? || @lower_brackets.any? %>
    <!-- Upper Bracket -->
    <div class="mb-8">
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-4 bg-green-50 border-b border-green-200">
          <h3 class="text-lg font-medium text-green-900">Upper Bracket</h3>
          <p class="text-sm text-green-700">Winners advance to next round</p>
        </div>
        <div class="p-6 space-y-8">
          <% @upper_brackets.group_by(&:round).sort.each do |round, brackets| %>
            <div>
              <h4 class="text-base font-semibold text-gray-900 mb-4">Round <%= round %></h4>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <% brackets.each do |bracket| %>
                  <%= render 'brackets/bracket_match', bracket: bracket %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Lower Bracket -->
    <div class="mb-8">
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-4 bg-orange-50 border-b border-orange-200">
          <h3 class="text-lg font-medium text-orange-900">Lower Bracket</h3>
          <p class="text-sm text-orange-700">Second chance for fighters who lost in upper bracket</p>
        </div>
        <div class="p-6 space-y-8">
          <% @lower_brackets.group_by(&:round).sort.each do |round, brackets| %>
            <div>
              <h4 class="text-base font-semibold text-gray-900 mb-4">Round <%= round %></h4>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <% brackets.each do |bracket| %>
                  <%= render 'brackets/bracket_match', bracket: bracket %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Grand Finals -->
    <% if @finals %>
      <div class="mb-8">
        <div class="bg-white shadow rounded-lg overflow-hidden border-2 border-yellow-400">
          <div class="px-6 py-4 bg-yellow-50 border-b border-yellow-200">
            <h3 class="text-lg font-medium text-yellow-900 text-center">Grand Finals</h3>
          </div>
          <div class="p-6">
            <div class="max-w-md mx-auto">
              <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
                <div class="p-3 bg-gray-50 text-center text-sm font-medium text-gray-700">
                  Championship Match
                </div>

                <!-- Fighter 1 -->
                <div class="p-3 border-b border-gray-200 flex justify-between items-center <%= @finals.completed && @finals.winner == @finals.fighter1 ? 'bg-green-50 border-l-4 border-green-500' : @finals.completed ? 'bg-gray-50' : '' %>">
                  <% if @finals.fighter1 %>
                    <div class="flex-1">
                      <span class="text-sm <%= @finals.completed && @finals.winner == @finals.fighter1 ? 'font-extrabold text-green-800' : @finals.completed ? 'text-gray-500' : 'text-gray-900' %>">
                        <%= @finals.fighter1.name %>
                      </span>
                      <span class="text-xs <%= @finals.completed && @finals.winner == @finals.fighter1 ? 'text-green-700' : 'text-gray-500' %>">
                        (<%= @finals.fighter1.club %>)
                      </span>
                      <% if @finals.completed && @finals.match %>
                        <span class="text-xs ml-1 font-semibold <%= @finals.winner == @finals.fighter1 ? 'text-green-700' : 'text-gray-500' %>">
                          <%= @finals.match.fighter1_points %>
                        </span>
                      <% end %>
                    </div>
                    <% if @finals.completed && @finals.winner == @finals.fighter1 %>
                      <div class="flex items-center">
                        <span class="px-3 py-1 text-sm font-bold text-white bg-yellow-500 rounded">CHAMPION</span>
                      </div>
                    <% end %>
                  <% else %>
                    <span class="text-sm italic text-gray-400">Upper Bracket Winner</span>
                  <% end %>
                </div>

                <!-- Fighter 2 -->
                <div class="p-3 border-b border-gray-200 flex justify-between items-center <%= @finals.completed && @finals.winner == @finals.fighter2 ? 'bg-green-50 border-l-4 border-green-500' : @finals.completed ? 'bg-gray-50' : '' %>">
                  <% if @finals.fighter2 %>
                    <div class="flex-1">
                      <span class="text-sm <%= @finals.completed && @finals.winner == @finals.fighter2 ? 'font-extrabold text-green-800' : @finals.completed ? 'text-gray-500' : 'text-gray-900' %>">
                        <%= @finals.fighter2.name %>
                      </span>
                      <span class="text-xs <%= @finals.completed && @finals.winner == @finals.fighter2 ? 'text-green-700' : 'text-gray-500' %>">
                        (<%= @finals.fighter2.club %>)
                      </span>
                      <% if @finals.completed && @finals.match %>
                        <span class="text-xs ml-1 font-semibold <%= @finals.winner == @finals.fighter2 ? 'text-green-700' : 'text-gray-500' %>">
                          <%= @finals.match.fighter2_points %>
                        </span>
                      <% end %>
                    </div>
                    <% if @finals.completed && @finals.winner == @finals.fighter2 %>
                      <div class="flex items-center">
                        <span class="px-3 py-1 text-sm font-bold text-white bg-yellow-500 rounded">CHAMPION</span>
                      </div>
                    <% end %>
                  <% else %>
                    <span class="text-sm italic text-gray-400">Lower Bracket Winner</span>
                  <% end %>
                </div>

                <!-- Actions -->
                <div class="p-4 text-center bg-gray-50">
                  <% if @finals.completed %>
                    <div class="text-lg font-bold text-green-700">Champion: <%= @finals.winner.name %></div>
                    <% if @finals.match %>
                      <div class="mt-2">
                        <%= link_to "View Finals Match", display_match_path(@finals.match), class: "text-sm text-gray-600 hover:text-gray-900" %>
                      </div>
                    <% end %>
                  <% elsif @finals.ready_to_fight? && @finals.match %>
                    <%= link_to 'Setup & Score Finals', setup_match_path(@finals.match), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
                    <div class="text-xs text-gray-500 mt-2">Match #<%= @finals.match.id %></div>
                  <% else %>
                    <span class="text-sm text-gray-500">Waiting for finalists</span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  <% else %>
    <div class="bg-white shadow rounded-lg p-6 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 00-2-2h-2a2 2 0 00-2 2v14"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No Brackets Created</h3>
      <p class="mt-1 text-sm text-gray-500">Generate elimination brackets from your pool results.</p>
      <div class="mt-6">
        <%= link_to "Generate Brackets", new_bracket_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
      </div>
    </div>
  <% end %>
</div>