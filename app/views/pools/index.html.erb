<div class="px-4 sm:px-0">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h2 class="text-3xl font-bold text-gray-900">Pools</h2>
      <p class="mt-2 text-sm text-gray-700">Manage tournament pools and round-robin matches.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to "Generate Pools", new_pool_path, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-red-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-red-700" %>
    </div>
  </div>

  <% if @pools.any? %>
    <!-- Pools Summary Section -->
    <div class="mt-8 bg-white shadow rounded-lg overflow-hidden">
      <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">All Pools Overview</h3>
        <p class="text-sm text-gray-500">Complete roster breakdown by pool</p>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          <% @pools.each do |pool| %>
            <div class="border border-gray-200 rounded-lg p-4">
              <div class="flex items-center justify-between mb-3">
                <h4 class="text-base font-semibold text-gray-900"><%= pool.name %></h4>
                <% if pool.completed %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">✓</span>
                <% else %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">•</span>
                <% end %>
              </div>
              <div class="space-y-1.5">
                <% pool.fighters.order(:name).each do |fighter| %>
                  <div class="text-sm">
                    <span class="font-medium text-gray-900"><%= fighter.name %></span>
                    <div class="text-xs text-gray-500"><%= fighter.club %></div>
                  </div>
                <% end %>
              </div>
              <div class="mt-3 pt-3 border-t border-gray-200 text-xs text-gray-500">
                <%= pool.fighters.count %> fighters • <%= pool.matches.where(status: 'completed').count %>/<%= pool.matches.count %> matches
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Pool Cards -->
    <div class="mt-8">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Pool Management</h3>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @pools.each do |pool| %>
          <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-medium text-gray-900"><%= pool.name %></h3>
                <% if pool.completed %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Completed</span>
                <% else %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Active</span>
                <% end %>
              </div>
              
              <div class="text-sm text-gray-500 mb-4">
                <div class="flex justify-between mb-2">
                  <span>Fighters:</span>
                  <span class="font-medium text-gray-900"><%= pool.fighters.count %></span>
                </div>
                <div class="flex justify-between mb-2">
                  <span>Matches:</span>
                  <span class="font-medium text-gray-900">
                    <%= pool.matches.where(status: 'completed').count %> / <%= pool.matches.count %>
                  </span>
                </div>
              </div>

              <div class="space-y-2">
                <%= link_to "View Details", pool_path(pool), class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
                
                <% unless pool.completed %>
                  <%= link_to "Edit Pool", edit_pool_path(pool), class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
                  
                  <% if pool.all_matches_completed? %>
                    <%= button_to "Complete Pool", complete_pool_path(pool), method: :post, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="mt-8 bg-white shadow rounded-lg p-6 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No pools created</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by generating pools from registered fighters.</p>
      <div class="mt-6">
        <%= link_to "Generate Pools", new_pool_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
      </div>
    </div>
  <% end %>
</div>