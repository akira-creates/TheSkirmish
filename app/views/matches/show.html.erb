<div class="px-4 sm:px-0 max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to matches_path, class: "text-sm text-gray-500 hover:text-gray-700" do %>
      ‚Üê Back to Matches
    <% end %>
  </div>

  <div class="bg-white shadow overflow-hidden rounded-lg">
    <div class="px-4 py-5 sm:px-6 bg-gray-50">
      <h3 class="text-2xl font-bold text-gray-900 text-center">Match Details</h3>
      <% if @match.pool %>
        <p class="text-center text-sm text-gray-500 mt-1"><%= @match.pool.name %></p>
      <% end %>
    </div>
    
    <div class="border-t border-gray-200 px-4 py-5 sm:p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        <!-- Fighter 1 -->
        <div class="text-center">
          <h4 class="text-xl font-bold text-gray-900 mb-2"><%= @match.fighter1.name %></h4>
          <p class="text-sm text-gray-600 mb-3"><%= @match.fighter1.club %></p>
          
          <% if @match.status == 'completed' %>
            <div class="mb-3">
              <span class="text-4xl font-bold <%= @match.winner_id == @match.fighter1_id ? 'text-green-600' : 'text-gray-400' %>">
                <%= @match.fighter1_points %>
              </span>
            </div>
            
            <% if @match.winner_id == @match.fighter1_id %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                Winner
              </span>
            <% end %>
          <% end %>
          
          <div class="mt-4 text-left bg-gray-50 p-3 rounded-md">
            <p class="text-xs font-semibold text-gray-700 mb-1">Loadout:</p>
            <p class="text-sm"><strong>Main:</strong> <%= @match.fighter1_main&.name || 'N/A' %></p>
            <% if @match.fighter1_offhand %>
              <p class="text-sm"><strong>Off-hand:</strong> <%= @match.fighter1_offhand.name %></p>
            <% end %>
            <p class="text-sm"><strong>Debuff:</strong> <%= @match.fighter1_debuff || 'None' %></p>
          </div>
        </div>

        <!-- VS -->
        <div class="flex items-center justify-center">
          <span class="text-3xl font-bold text-gray-400">VS</span>
        </div>

        <!-- Fighter 2 -->
        <div class="text-center">
          <h4 class="text-xl font-bold text-gray-900 mb-2"><%= @match.fighter2.name %></h4>
          <p class="text-sm text-gray-600 mb-3"><%= @match.fighter2.club %></p>
          
          <% if @match.status == 'completed' %>
            <div class="mb-3">
              <span class="text-4xl font-bold <%= @match.winner_id == @match.fighter2_id ? 'text-green-600' : 'text-gray-400' %>">
                <%= @match.fighter2_points %>
              </span>
            </div>
            
            <% if @match.winner_id == @match.fighter2_id %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                Winner
              </span>
            <% end %>
          <% end %>
          
          <div class="mt-4 text-left bg-gray-50 p-3 rounded-md">
            <p class="text-xs font-semibold text-gray-700 mb-1">Loadout:</p>
            <p class="text-sm"><strong>Main:</strong> <%= @match.fighter2_main&.name || 'N/A' %></p>
            <% if @match.fighter2_offhand %>
              <p class="text-sm"><strong>Off-hand:</strong> <%= @match.fighter2_offhand.name %></p>
            <% end %>
            <p class="text-sm"><strong>Debuff:</strong> <%= @match.fighter2_debuff || 'None' %></p>
          </div>
        </div>
      </div>

      <% if @match.status == 'completed' && @match.duration %>
        <div class="text-center py-4 bg-gray-50 rounded-md">
          <p class="text-sm text-gray-600">Match Duration</p>
          <p class="text-2xl font-bold text-gray-900"><%= @match.duration %> seconds</p>
        </div>
      <% end %>
    </div>
  </div>
</div>