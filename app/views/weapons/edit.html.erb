<div class="px-4 sm:px-0">
  <div class="mb-6">
    <%= link_to weapons_path, class: "text-sm text-gray-500 hover:text-gray-700" do %>
      ‚Üê Back to Weapons
    <% end %>
  </div>

  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Edit Weapon</h3>
        <p class="mt-1 text-sm text-gray-600">Update weapon information and cost.</p>
      </div>
    </div>
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= simple_form_for @weapon, html: { class: "bg-white shadow rounded-lg" } do |f| %>
        <div class="px-4 py-5 sm:p-6">
          <div class="grid grid-cols-6 gap-6">
            <div class="col-span-6">
              <%= f.input :name, 
                  input_html: { class: "mt-1 focus:ring-red-500 focus:border-red-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" },
                  wrapper_html: { class: "block text-sm font-medium text-gray-700" } %>
            </div>

            <div class="col-span-6">
              <%= f.input :weapon_type, 
                  collection: Weapon::WEAPON_TYPES,
                  input_html: { class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-red-500 focus:border-red-500 sm:text-sm rounded-md" },
                  wrapper_html: { class: "block text-sm font-medium text-gray-700" } %>
            </div>

            <div class="col-span-6">
              <%= f.input :cost,
                  input_html: { class: "mt-1 focus:ring-red-500 focus:border-red-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", min: 0, max: 7 },
                  wrapper_html: { class: "block text-sm font-medium text-gray-700" },
                  hint: "Cost in points (0-7)" %>
            </div>
          </div>
        </div>
        <div class="px-4 py-3 bg-gray-50 text-right sm:px-6 rounded-b-lg">
          <%= link_to "Cancel", weapons_path, class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 mr-3" %>
          <%= f.submit "Update Weapon", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>